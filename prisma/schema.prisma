// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums (Choices)
enum Role {
  USER
  ADMIN
}

enum MatchStatus {
  PENDING
  DISPUTE
  COMPLETED
}

// Models (Tables)

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  role      Role     @default(USER) 
  ign       String?
  mlbbId    String?
  teamId    String?
  team      Team?    @relation(fields: [teamId], references: [id])
}

model Team {
  id           String       @id @default(uuid())
  name         String
  captainId    String
  members      User[]
  
  // A team can join many tournaments
  tournaments  Tournament[] 
}

model Tournament {
  id          String   @id @default(uuid())
  name        String
  status      String   @default("REGISTRATION")
  
  matches     Match[]
  
  // This was missing before! It links Tournaments to Teams.
  teams       Team[]   
}

model Match {
  id            String      @id @default(uuid())
  tournamentId  String
  tournament    Tournament  @relation(fields: [tournamentId], references: [id])
  round         Int
  matchOrder    Int         @default(0) // Added default for safety
  
  teamAId       String?
  teamBId       String?
  winnerId      String?
  
  // The "Proof of Win" System
  proofImage    String?     
  status        MatchStatus @default(PENDING)
}
